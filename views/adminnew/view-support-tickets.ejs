  <body class="vertical  light  ">
    <div class="wrapper">
      <main role="main" class="main-content" style="margin-left: 0;">
        <div class="container-fluid">
          <div class="row justify-content-center">
            <div class="col-12">
              <div class="row align-items-center mb-4">
                <div class="col">
                  <h2 class="h5 page-title"><small class="text-muted text-uppercase">Ticket</small><br /><%= ticketDetails._id %></h2>
                </div>
              </div> <!-- .row -->
              <div class="row my-4">
                <div class="col-md-9">
                  <div class="card shadow mb-4">
                    <div class="card-header">
                      <strong class="card-title"><%= ticketDetails.title %></strong>
                    </div>
                    <div class="card-body">
                      <dl class="row align-items-center mb-0">
                        <dt class="col-sm-2 mb-3 text-muted">Reported by</dt>
                        <dd class="col-sm-4 mb-3">
                          <strong><%= ticketDetails.user.username %></strong>
                        </dd>
                        <dt class="col-sm-2 mb-3 text-muted">Assigned to</dt>
                        <dd class="col-sm-4 mb-3">
                          <strong>Admin</strong>
                        </dd>
                      </dl>
                      <dl class="row mb-0">
                        <dt class="col-sm-2 mb-3 text-muted">Status</dt>
                        <dd class="col-sm-4 mb-3"><%= ticketDetails.user.status %></dd>
                        <dt class="col-sm-2 mb-3 text-muted">Department</dt>
                        <dd class="col-sm-4 mb-3">Support</dd>
                        <dt class="col-sm-2 mb-3 text-muted">Priority</dt>
                        <dd class="col-sm-4 mb-3">
                            <% if(ticketDetails.priority === 'High') {%>
                          <span class="badge badge-pill badge-danger">High</span>
                          <% }else if(ticketDetails.priority === 'Medium'){%>
                            <span class="badge badge-pill badge-primary">Medium</span>
                            <% }else{ %>
                                <span class="badge badge-pill badge-success">Low</span>
                            <% } %>
                        </dd>
                        <dt class="col-sm-2 mb-3 text-muted">Status</dt>
                        <dd class="col-sm-4 mb-3">
                          <span class="dot dot-md bg-warning mr-2"></span> <%= ticketDetails.status %>
                          <div class="dropdown d-inline">
                            <button class="btn btn-sm p-0 dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              <span class="sr-only">Change status</span>
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                              <a class="dropdown-item" href="#" data-status="Closed">Closed</a>
                              <a class="dropdown-item" href="#" data-status="In Progress">In Progress</a>
                              <a class="dropdown-item" href="#" data-status="Open">Open</a>
                            </div>
                          </div>
                        </dd>
                        <dt class="col-sm-2 mb-3 text-muted">Created On</dt>
                        <dd class="col-sm-4 mb-3"><%= ticketDetails.createdAt.toDateString() %></dd>
                        <dt class="col-sm-2 mb-3 text-muted">Last Update</dt>
                        <% if(ticketDetails.updatedAt) {%>
                            <dd class="col-sm-4 mb-3"><%= ticketDetails.updatedAt.toDateString() %></dd>
                            <% }else{ %>
                                <dd class="col-sm-4 mb-3">Yet to updated</dd>
                            <% } %>
                        <dt class="col-sm-2 text-muted">Description</dt>
                        <dd class="col-sm-10"><%= ticketDetails.description %></dd>
                      </dl>
                    </div> <!-- .card-body -->
                  </div> <!-- .card -->
                </div> <!-- .col-md -->
              </div> <!-- .col-md -->
            </div>
          </div> <!-- .col-12 -->
        </div> <!-- .row -->
    </div> <!-- .container-fluid -->

