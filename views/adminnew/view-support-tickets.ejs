    <script>
      // Add an event listener to the dropdown items
$(".dropdown-item").on("click", function (e) {
  e.preventDefault(); // Prevent the default link behavior

  const newStatus = $(this).data("status"); // Get the new status from the data-status attribute

  // Send an HTTP request to update the status in the database
  $.ajax({
    url: "/editTicketStatus", // Replace with your server route for updating ticket status
    method: "POST",
    data: {
      ticketId: "<%= ticketDetails._id %>", // Replace with the actual ticket ID
      newStatus: newStatus,
    },
    success: function (response) {
      // Handle success, you can update the UI or show a success message
      console.log("Ticket status updated successfully:", response);

      // Update the displayed status on the page
      $(".dot").removeClass().addClass("dot dot-md " + getStatusColor(newStatus));
      $(".dropdown-toggle").dropdown("toggle"); // Close the dropdown
    },
    error: function (error) {
      // Handle error, show an error message, etc.
      console.error("Error updating ticket status:", error);
    },
  });
});

// Function to get the color class based on the status (customize as needed)
function getStatusColor(status) {
  switch (status) {
    case "Closed":
      return "bg-danger";
    case "In Progress":
      return "bg-primary";
    case "Open":
      return "bg-warning";
    default:
      return "";
  }
}

