    <table class="table align-middle mb-0 bg-white">
      <div class="utils">
        <div class="input-group" style="display: flex;justify-content: center;width: 400px;margin-left: 5%;">
          <div class="form-outline">
            <input type="search" id="searchInput" placeholder="Search" class="form-control" style="border: 2px solid rgb(160, 160, 160);" placeholder="Search" />
          </div>
          <button type="button" id="searchButton" class="btn btn-primary">
            <i class="fas fa-search"></i>
          </button>
        </div>
        <div class="dropdown">
          <select name="cars" id="filterDropdown" class="form-select form-select-sm" id="cars">
              <option value="all">All Products</option>
              <option value="inStock">In Stock</option>
              <option value="outOfStock">Out of Stock</option>
          </select>
      </div>
        <div class="addproduct">
          <a href="/admin/addproduct"><button type="button" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> Add Product
          </button></a>
        </div>
      </div>
      <thead class="bg-light">
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Status</th>
          <th>Color</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
        <tr>
            <td>
                <div class="d-flex align-items-center">
                    <img
                        src="/uploads/images/<%= product.productImages[3] %>"
                        alt="product image"
                        style="width: 45px; height: 45px"
                        class="rounded-circle"
                    />
                    <div class="ms-3">
                        <p class="fw-bold mb-1"><%= product.name %></p>
                        <p class="text-muted mb-0"><%= product.category %></p>
                    </div>
                </div>
            </td>
            <td>
                <p class="fw-normal mb-1"><%= product.price %></p>
                <p class="text-muted mb-0"><%= product.discountPrice %></p>
            </td>
            <td>
                <% if (product.quantity !== null && product.quantity > 0) { %>
                    <span class="badge badge-success rounded-pill d-inline">In Stock <%=product.quantity%> left</span>
                <% } else { %>
                    <span class="badge badge-danger rounded-pill d-inline">Out of Stock 0 left</span>
                <% } %>
            </td>
            <td><%= product.productColor %></td> 
            <td>
                <a href="/admin/editproduct/<%=product._id%>"><button type="button" class="btn btn-link btn-sm btn-rounded">
                  Edit
              </button></a>
              <form action="/admin/deleteproduct/<%=product._id%>" method="POST">
                <button type="submit" class="btn btn-link btn-sm btn-rounded" onclick="return confirm('Are you sure you want to delete this address?');">Delete</button>
            </form>
            </td>
        </tr>
        <% }); %>
    </tbody>
    
      </tbody>
    </table>
    <!--Container Main end-->
  </body>
  <script>
    document.addEventListener("DOMContentLoaded", function (event) {
      const showNavbar = (toggleId, navId, bodyId, headerId) => {
        const toggle = document.getElementById(toggleId),
          nav = document.getElementById(navId),
          bodypd = document.getElementById(bodyId),
          headerpd = document.getElementById(headerId);

        // Validate that all variables exist
        if (toggle && nav && bodypd && headerpd) {
          toggle.addEventListener("click", () => {
            // show navbar
            nav.classList.toggle("show");
            // change icon
            toggle.classList.toggle("bx-x");
            // add padding to body
            bodypd.classList.toggle("body-pd");
            // add padding to header
            headerpd.classList.toggle("body-pd");
          });
        }
      };

      showNavbar("header-toggle", "nav-bar", "body-pd", "header");

      /*===== LINK ACTIVE =====*/


    });

    function updateProductCounts() {
    fetch('/admin/getProductCount') // Use the correct API endpoint
        .then(response => response.json())
        .then(data => {
            const totalProductsCount = data.totalProductsCount;
            const inStockProductsCount = data.inStockProductsCount;
            const outOfStockProductsCount = data.outOfStockProductsCount;

            // Update the HTML elements with the counts
            document.getElementById("totalProductsCount").textContent = totalProductsCount;
            document.getElementById("inStockProductsCount").textContent = inStockProductsCount;
            document.getElementById("outOfStockProductsCount").textContent = outOfStockProductsCount;
        })
        .catch(error => {
            console.error('Error fetching product counts:', error);
        });
}
updateProductCounts()
document.addEventListener("DOMContentLoaded", function (event) {
    // ... Your existing code ...

    // Add an event listener to the search button
    document.getElementById("searchButton").addEventListener("click", function () {
        searchProducts();
    });

    // Define a function to filter the table rows
    function searchProducts() {
        const searchInput = document.getElementById("searchInput").value.toLowerCase();
        const tableRows = document.querySelectorAll("tbody tr");

        tableRows.forEach((row) => {
            const productName = row.querySelector("td:first-child p.fw-bold").textContent.toLowerCase();
            if (productName.includes(searchInput)) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    }
  });
document.getElementById("filterDropdown").addEventListener("change", function () {
  filterProducts();
});

function filterProducts() {
  const selectedOption = document.getElementById("filterDropdown").value;
  const tableRows = document.querySelectorAll("tbody tr");

  tableRows.forEach((row) => {
    const statusBadge = row.querySelector("td:nth-child(3) span");
    const quantity = parseInt(statusBadge.textContent.match(/\d+/)); // Extract the quantity value

    if (selectedOption === "all") {
      row.style.display = "";
    } else if (selectedOption === "inStock" && quantity > 0) {
      row.style.display = "";
    } else if (selectedOption === "outOfStock" && quantity === 0) {
      row.style.display = "";
    } else {
      row.style.display = "none";
    }
  });
}
