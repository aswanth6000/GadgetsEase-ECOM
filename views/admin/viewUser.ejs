    <table class="table align-middle mb-0 bg-white">
      <div class="utils">
        <div class="input-group" style="display: flex;justify-content: center;width: 400px;margin-left: 5%;">
          <div class="form-outline">
            <input type="search" id="searchInput" placeholder="Search" class="form-control" style="border: 2px solid rgb(160, 160, 160);" placeholder="Search" />
          </div>
          <button type="button" id="searchButton" class="btn btn-primary">
            <i class="fas fa-search"></i>
          </button>
        </div>
        <div class="dropdown">
          <select name="cars" id="filterDropdown" class="form-select form-select-sm" id="cars">
              <option value="all">All Users</option>
              <option value="active">Active</option>
              <option value="blocked">Blocked</option>
          </select>
      </div>
      </div>
      <thead class="bg-light">
        <tr>
          <th>Name</th>
          <th>Phone Number</th>
          <th>Status</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% user.forEach(user => { %>
        <tr>
            <td>
                <div class="d-flex align-items-center">
                    <img
                        src="/uploads/images/<%= user.profileImage %>"
                        alt="product image"
                        style="width: 45px; height: 45px"
                        class="rounded-circle"
                    />
                    <div class="ms-3">
                        <p class="fw-bold mb-1"><%= user.username %></p>
                        
                    </div>
                </div>
            </td>
            <td>
                <p class="fw-normal mb-1"><%= user.phoneNumber %></p>
            </td>
            <td>
                <% if (user.status === 'active') { %>
                    <span class="badge badge-success rounded-pill d-inline"><%=user.status%></span>
                <% } else { %>
                    <span class="badge badge-danger rounded-pill d-inline"><%=user.status%></span>
                <% } %>
            </td>
            <td><%= user.email %></td> 
            <td>
              <% if(user.status === 'active'){ %>
                <form action="/admin/blockuser/<%=user._id%>" method="POST">
                  <button type="submit" class="btn btn-link btn-sm btn-rounded" onclick="return confirm('Are you sure you want to block this user');">Block</button>
              </form>
              <% }else {%>
                <form action="/admin/unblockuser/<%=user._id%>" method="POST">
                  <button type="submit" class="btn btn-link btn-sm btn-rounded" onclick="return confirm('Are you sure you want to unblock this user');">UnBlock</button>
              </form>
              <% } %>
              <form action="/admin/deleteuser/<%=user._id%>" method="POST">
                <button type="submit" class="btn btn-link btn-sm btn-rounded" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
            </form>
            </td>
        </tr>
        <% }); %>
    </tbody>
    
      </tbody>
    </table>
    <!--Container Main end-->
  </body>
  <script>
    document.addEventListener("DOMContentLoaded", function (event) {
      const showNavbar = (toggleId, navId, bodyId, headerId) => {
        const toggle = document.getElementById(toggleId),
          nav = document.getElementById(navId),
          bodypd = document.getElementById(bodyId),
          headerpd = document.getElementById(headerId);

        // Validate that all variables exist
        if (toggle && nav && bodypd && headerpd) {
          toggle.addEventListener("click", () => {
            // show navbar
            nav.classList.toggle("show");
            // change icon
            toggle.classList.toggle("bx-x");
            // add padding to body
            bodypd.classList.toggle("body-pd");
            // add padding to header
            headerpd.classList.toggle("body-pd");
          });
        }
      };

      showNavbar("header-toggle", "nav-bar", "body-pd", "header");
    });

    function updateProductCounts() {
    fetch('/admin/getUsersCount') // Use the correct API endpoint
        .then(response => response.json())
        .then(data => {
            const totalUsersCount = data.totalUsersCount;
            const activeUsersCount = data.activeUsersCount;
            const blockedUsersCount = data.blockedUsersCount;
            console.log(totalUsersCount);

            // Update the HTML elements with the counts
            document.getElementById("totalUsersCount").textContent = totalUsersCount;
            document.getElementById("activeUsersCount").textContent = activeUsersCount;
            document.getElementById("blockedUsersCount").textContent = blockedUsersCount;
        })
        .catch(error => {
            console.error('Error fetching users counts:', error);
        });
}
updateProductCounts()
document.addEventListener("DOMContentLoaded", function (event) {
    document.getElementById("searchButton").addEventListener("click", function () {
        searchProducts();
    });
    function searchProducts() {
        const searchInput = document.getElementById("searchInput").value.toLowerCase();
        const tableRows = document.querySelectorAll("tbody tr");
        tableRows.forEach((row) => {
            const productName = row.querySelector("td:first-child p.fw-bold").textContent.toLowerCase();
            if (productName.includes(searchInput)) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    }
  });
  document.getElementById("filterDropdown").addEventListener("change", function () {
  filterUsers();
});

function filterUsers() {
  const selectedOption = document.getElementById("filterDropdown").value;
  const tableRows = document.querySelectorAll("tbody tr");

  tableRows.forEach((row) => {
    const statusBadge = row.querySelector("td:nth-child(3) span");

    if (selectedOption === "all") {
      row.style.display = "";
    } else {
      const userStatus = statusBadge.textContent.toLowerCase();
      if (userStatus === selectedOption) {
        row.style.display = "";
      } else {
        row.style.display = "none";
      }
    }
  });
}

