<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		 <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

		<title>Checkout Product</title>

 		<!-- Google font -->
 		<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

 		<!-- Bootstrap -->
 		<link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css"/>

 		<!-- Slick -->
 		<link type="text/css" rel="stylesheet" href="/css/slick.css"/>
 		<link type="text/css" rel="stylesheet" href="/css/slick-theme.css"/>

 		<!-- nouislider -->
 		<link type="text/css" rel="stylesheet" href="/css/nouislider.min.css"/>

 		<!-- Font Awesome Icon -->
 		<link rel="stylesheet" href="/css/font-awesome.min.css">

 		<!-- Custom stlylesheet -->
 		<link type="text/css" rel="stylesheet" href="/css/style.css"/>

		<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->

    </head> 
	<body>
		<!-- HEADER -->
		<%- include('../partials/navigation') %>
		<!-- BREADCRUMB -->
		<div id="breadcrumb" class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<div class="col-md-12">
						<h3 class="breadcrumb-header">Checkout</h3>
						<ul class="breadcrumb-tree">
							<li><a href="#">Home</a></li>
							<li class="active">Checkout</li>
						</ul>
					</div>
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /BREADCRUMB -->

		<!-- SECTION -->
		<form action="/postCheckout/<%= user %>" method="post">
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">

					<div class="col-md-7">
						<!-- Billing Details -->
						<div class="billing-details">
							<div class="section-title">
								<h3 class="title">Billing address</h3>
							</div>
							<div class="form-group">
								<% for (let i = 0; i < addresses.length; i++) { %>
								<div class="input-radio">
									<input type="radio" name="address" id="<%= addresses[i].name %>" value="<%= addresses[i]._id %>">
									<label for="<%= addresses[i].name %>">
										<span></span>
										<%= addresses[i].type %>
									</label>
									<div class="caption">
										<h5 class="card-title"><%= addresses[i].name %></h5>
                          				<p class="card-text"><%= addresses[i].houseName %></p>
                          				<p class="card-text"><%= addresses[i].street %></p>
                          				<p class="card-text"><%= addresses[i].city %></p>
                          				<p class="card-text"><%= addresses[i].pinCode %></p>
                          				<p class="card-text"><%= addresses[i].state %></p>
                          				<p class="card-text"><%= addresses[i].phone %></p>
									</div>
								</div>
								<% } %>
							</div>
						</div>
						<!-- /Billing Details -->

						<!-- Shiping Details -->
						<div class="shiping-details">
							<div class="input-checkbox">
								<a href="/addaddress/<%= user._id %>">Ship to a diffrent address?</a>
							</div>
						</div>
					</div>
					<div class="col-md-5 order-details">
						<div class="section-title text-center">
							<h3 class="title">Your Order</h3>
						</div>
						<div class="order-summary">
							<% if (user.cart.length !== 0) { %>
								<div class="order-col">
									<div><strong>PRODUCT</strong></div>
									<div><strong>TOTAL</strong></div>
								</div>
								<% for (let i = 0; i < user.cart.length; i++) { %>
							<div class="order-products">
								<div class="order-col">
									<div><span style="color:#7dc49d; font-weight: 800;"><%= user.cart[i].quantity %> x </span><%= user.cart[i].product.name %></div>
									<div>₹<%= user.cart[i].product.discountPrice %></div>
								</div>
							</div>
							<% } %>
							<div class="order-col">
								<div>Shiping</div>
								<div><strong>₹100</strong></div>
							</div>
							<div class="order-col">
								<div><strong>TOTAL</strong></div>
								<div><strong class="order-total">₹<%= subtotalWithShipping %></strong></div>
							</div>
							<% } %>
						</div>
						<div class="payment-method">
							<div class="input-radio">
								<input type="radio" name="payment" id="cod" value="Cash on delivery">
								<label for="cod">
									<span></span>
									Cash on delivery 
								</label>
							</div>
							<div class="input-radio">
								<input type="radio" name="payment" id="payment-3">
								<label for="payment-3">
									<span></span>
									UPI
								</label>
								<div class="caption">
									<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
								</div>
							</div>
						</div>
						<button type="submit" class="primary-btn order-submit">Place order</button>
					</div>
					<!-- /Order Details -->
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
	</form>
		<!-- /SECTION -->
		<%- include('../partials/footer') %>

		<!-- jQuery Plugins -->
		<script src="/js/jquery.min.js"></script>
		<script src="/js/bootstrap.min.js"></script>
		<script src="/js/slick.min.js"></script>
		<script src="/js/nouislider.min.js"></script>
		<script src="/js/jquery.zoom.min.js"></script>
		<script src="/js/main.js"></script>
		<script src="/js/validation.js"></script>

	</body>
</html>
