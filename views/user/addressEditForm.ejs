<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User profile</title>
<!-- Font Awesome -->
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
  rel="stylesheet"
/>
<!-- Google Fonts -->
<link
  href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
  rel="stylesheet"
/>
<!-- MDB -->
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.1/mdb.min.css"
  rel="stylesheet"
/>
<!-- MDB -->
<script
  type="text/javascript"
  src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.1/mdb.min.js"
></script>
</head>
<body style="display: flex;justify-content: center;">
    <div class="row" style="width: 40%;">
        <div class="col-md-12 mb-4">
          <div class="card mb-4">
            <div class="card-header py-3">
              <h5 class="mb-0">Address</h5>
            </div>
            <div class="card-body">
              <form action="/editAddress/<%=user._id%>/<%=addressToEdit._id%>" method="post">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row mb-4">
                  <div class="col">
                    <div class="form-check">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="type" id="flexRadioDefault1" value="home" checked />
                            <label class="form-check-label" for="flexRadioDefault1"> Home </label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="type" id="flexRadioDefault2" value="work" />
                            <label class="form-check-label" for="flexRadioDefault2"> Work </label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="type" id="flexRadioDefault3" value="other" />
                            <label class="form-check-label" for="flexRadioDefault3"> Other </label>
                          </div>
                      </div>
                  </div>
                </div>
                <div class="row mb-4">
                  <div class="col">
                    <div class="form-outline">
                        <label  for="form7Example1">Name</label>
                      <input type="text" id="form7Example1" class="form-control" name="name" value="<%=addressToEdit.name%>" />
                    </div>
                  </div>
                </div>
      
                <!-- Text input -->
                <div class="form-outline mb-4">
                    <label  for="form7Example3">House name</label>
                  <input type="text" id="form7Example3" class="form-control" name="houseName" value="<%=addressToEdit.houseName%>" />
                </div>
      
                <!-- Text input -->
                <div class="form-outline mb-4">
                    <label  for="form7Example4">Street</label>
                  <input type="text" id="form7Example4" class="form-control" name="street" value="<%=addressToEdit.street%>" />
                </div>
      
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <label  for="form7Example5">City</label>
                  <input type="text" id="form7Example5" class="form-control" name="city" value="<%=addressToEdit.city%>" />
                </div>
                <div class="form-outline mb-4">
                    <label  for="form7Example5">Pincode</label>
                  <input type="number" id="form7Example5" class="form-control" maxlength="6" name="pinCode" value="<%=addressToEdit.pinCode%>"/>
                </div>
      
                <!-- Number input -->
                <div class="form-outline mb-4">
                    <label  for="form7Example6">Phone</label>
                  <input type="number" id="form7Example6" class="form-control" name="phone" value="<%=addressToEdit.phone%>" />
                </div>
                
                <div class="form-outline mb-4">
                    <label  for="form7Example6">State</label>
                  <input type="text" id="form7Example6" class="form-control" name="state" value="<%=addressToEdit.state%>" />
                </div>
      
                <div class="form-check d-flex justify-content-center mb-2">
                    <button class="btn btn-primary btn-lg " type="submit">
                        Save changes
                      </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
</body>
</html>